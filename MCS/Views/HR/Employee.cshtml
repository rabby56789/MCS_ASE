<script>
    let action = "";
    let selectedIndex;
    let selectedGUID;
    let departguid = "";
    let titleguid = "";
    let queryParams;
    let doc;
    let bannedModify = []; //禁止修改的欄位input name
    let clickedBtn;

    //頁面元件初始化
    function PageInit() {
        $('#dg').datagrid({
            url: '../api/ApiEmployee/Query',
            method: 'POST',
            toolbar: '#toolbar',
            singleSelect: true,
