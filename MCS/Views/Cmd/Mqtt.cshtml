                //let type = $('#edit_type').val();
                type = userData["TYPE"];
                diCount = userData["DI_COUNT"];
                doCount = userData["DO_COUNT"];
                let command_left = "";

                switch (type) {
                    case "DI":
                        for (var i = 0; i < doCount; i++) {
                            command_left += "0";
                            if (i < doCount - 1) { command_left += ","; }
                        }
                        break;
                    case "DO":
                        for (var i = 0; i < diCount; i++) {
                            command_left += "0";
                            if (i < diCount - 1) { command_left += ","; }
                        }
                        break;
                }
                $('#edit_command_left').val(command_left);
                
            },
